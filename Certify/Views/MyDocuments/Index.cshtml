@using System.Security.Policy;
@using Certify.Data;
@using Certify.Models;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<User> _userManager
@model IEnumerable<Certify.Models.Document>

@{
    ViewData["Title"] = "My Documents";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>List of your documents is here...</p>
</div>

<div class="container row text-center">

    <div class="col-md-2">
        <div class="card">
            <a class="nav-link text-primary" asp-controller="MyDocuments" asp-action="Create">
                <div class="card-body">
                    <i class="bi bi-file-earmark-plus display-1"></i>
                    <p>Add File</p>
                </div>
            </a>
        </div>
    </div>

    @{
        var currentUser = await _userManager.GetUserAsync(Context.User);
        foreach (var f in Model.Where(x => x.UserId == currentUser.Id))
        {
            <div class="col-md-2">
                <div class="card">
                    <div class="card-body">
                        <i class="bi bi-file-earmark-text display-1"></i>
                        <p>@f.Title</p>
                    </div>
                </div>
            </div>
            
        }
    }
</div>

