@using System.Security.Policy;
@using Certify.Data;
@using Certify.Models;
@using Microsoft.AspNetCore.Identity;
@using System.IO;
@inject UserManager<User> _userManager
@model List<Certify.Models.Document>

@{
    ViewData["Title"] = "My Signature";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>List of your signature is here...</p>
</div>

<div class="container row text-center g-3">

   @{
        var currentUser = await _userManager.GetUserAsync(Context.User);

        for (int i = Model.Count - 1; i >= 0; i--)
        {
            var f = Model[i];
                            <div class="col-md-2">
                                <div class="card bg-light h-100">
                                    <div class="card-body">
                                        <a class="nav-link text-black text-opacity-75" asp-controller="MyDocuments" asp-action="Info" asp-route-id="@f.Id">
                                @{
                                    string generatedIconName = $"bi-filetype-{f.FileURL.Substring(f.FileURL.LastIndexOf('.') + 1)}";
                                    string standartIconName = "bi-file-earmark";
                                }
                                            <i class="bi @standartIconName @generatedIconName display-1"></i>
                                            <p class="mb-0 mt-1 text-truncate">@f.Title</p>
                                            <hr class="mb-1 mt-1" />
                                            <p class="mb-0 text-muted"><small><i class="bi bi-pen"></i></small> 0 / 0 </p>
                                        </a>
                                    </div>
                                </div>
                            </div>
            
        }
    }
</div>
